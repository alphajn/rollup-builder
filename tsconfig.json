{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "resolveJsonModule": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
    },
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src", "*.ts"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
